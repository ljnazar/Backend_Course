<h4 class="fw-bolder text-center ps-3 my-5">Carrito</h4>
<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            {{#each payload.products}}
                <div id="idProduct{{@index}}" class="d-none">{{ product._id }}</div>
                <div class="col-xl-3 col-lg-4 col-md-6 col-ms-12">
                    <div class="card mb-2">
                        <img src={{ product.thumbnail }}
                            class="card-img-top" alt="Img" />
                        <div class="card-body">
                            <div class=" d-flex justify-content-center">
                                <h6>{{ product.title }}</h6>
                            </div>
                            <div class="">
                                <p class="small"><a href="#" class="text-muted ">{{ product.category }}</a></p>
                            </div>
                            <div class="mb-2">
                                <h6>{{ product.description }}</h6>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <p class="text-muted mb-0">stock: <span id="stockSpan" class="fw-bold">{{ product.stock }}</span></p>
                                <h6 class="text-dark mb-0">${{ product.price }}</h6>
                            </div>
                            <div class="d-flex justify-content-center">
                                <h6 class="text-dark mb-0">Cantidad: {{ quantity }}</h6>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
        <div class="d-flex justify-content-center mt-5">
            <button id="btnback" class="me-5 btn btn-primary">Seguir comprando</button>
            <button id="btnPurchase" class="btn btn-primary">Finalizar compra</button>
        </div>
    </div>
</section>


<script src="/js/cart.js"></script>